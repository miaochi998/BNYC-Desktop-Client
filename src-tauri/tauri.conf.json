    "longDescription": "BNYC is a professional RustDesk client customization SaaS platform that provides one-click server deployment and client customization features.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
